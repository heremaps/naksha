@file:OptIn(ExperimentalJsExport::class)

package com.here.naksha.lib.plv8

import naksha.jbon.BigInt64
import kotlin.js.ExperimentalJsExport
import kotlin.js.JsExport

/**
 * The prepared plan as returned by the PLV8 engine.
 */
@JsExport
interface IPlv8Plan {
    /**
     * Execute the prepared plan with the given arguments. The types must match to the prepared statement.
     * @param args The arguments to be set at $n position, where $1 is the first array element.
     * @return Either the number of affected rows (for updated) or the rows (for selects).
     */
    fun execute(args: Array<Any?>? = null): Any

    /**
     * Execute the prepared plan with the given arguments. The types must match to the prepared statement.
     * @param args The arguments to be set at $n position, where $1 is the first array element.
     * @return A cursor into the result-set.
     * @throws UnsupportedOperationException If executed on a platform that do not support cursors for plans.
     */
    fun cursor(args: Array<Any?>? = null): IPlv8Cursor

    /**
     * Adds next batch execution.
     * @param args The arguments to be set at $n position, where $1 is the first array element.
     * @throws UnsupportedOperationException If executed for a select statement.
     */
    fun addBatch(args: Array<Any?>? = null)

    /**
     * Executes all batched executions.
     * @return The number of affected rows for each batched execution in order.
     */
    fun executeBatch(): IntArray

    /**
     * Frees the plan.
     */
    fun free()
}